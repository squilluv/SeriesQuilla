<MainWindow>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.bg_normal
        MDToolbar:
            id: toolbar
            title: "SeriesQuilla"
            left_action_items: [["menu", lambda x: app.callback(x)]]
        MDBoxLayout:
            orientation: 'vertical'

            ScrollView:
                size_hint: 1, 7
                MDList:
                    id: results
            Widget:




<GroupsItems>:
    on_release:
        root.show_series_by_group()
    IconLeftWidget:
        icon: "folder"

    RightButton:
        icon: "minus"
        on_release:
            root.del_group()



<SeriesItems>:
    IconLeftWidget:
        icon: "file"

    RightButton:
        icon: "minus"
        on_release:
            root.del_series()


<AddGroup>:
    size_hint_y: None
    height: self.minimum_height
    orientation: "vertical"
    MDTextField:
        id: group_name
        hint_text: "Введите название группу"
    Widget:
    MDFloatingActionButton:
        icon: "plus"
        pos_hint: {"center_x": .5, "center_y": .5}
        on_release:
            root.add_group(root.ids.group_name.text)


<AddSeries>:
    size_hint_y: None
    height: self.minimum_height
    orientation: "vertical"
    MDDropDownItem:
        id: group_name
        pos_hint: {'center_x': .5, 'center_y': .5}
        text: 'Выберите группу'
        on_release: root.callback_group()
    MDTextField:
        id: add_series
        hint_text: "Введите название сериала"
    Widget:
    MDFloatingActionButton:
        icon: "plus"
        pos_hint: {"center_x": .5, "center_y": .5}
        on_release:
            root.add_series(root.ids.add_series.text)



<SearchBySeries>:
    size_hint_y: None
    orientation: "vertical"
    MDBoxLayout:
        MDTextField:
            id: search_series
            hint_text: "Введите название сериала"
        MDRectangleFlatButton:
            text: "Искать"
            on_release:
                root.search_series(root.ids.search_series.text)
    MDBoxLayout:
        MDList:
            id: search_results